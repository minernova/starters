
<section class="text-gray-600 body-font">
    <div class="container px-5 py-5 mx-auto">
      <div class="flex flex-wrap -m-4">
        <%- include("bottom_components/create-menu-card") %>


        <% menus.forEach(menu => { %>
          
          <div class="p-4 md:w-1/3">
            <div
              class="h-full bg-gray-100 border-2 border-gray-200 border-opacity-60 rounded-lg overflow-hidden"
            >
              <%- include("bottom_components/menu-card-date",{date:menu.date}) %>

              <a href="/menus/menu?menuId=<%= menu._id %>">
                <img
                  class="lg:h-52 md:h-44 w-full object-cover object-center"
                  src="data:image/<%=menu.image.contentType%>;base64,
                      <%=menu.image.data.toString('base64')%>"
                  alt="blog cover"
                  
                />

              </a>

              <div class="px-4 mt-2">
                <a 
                  href="/menus/menu?menuId=<%= menu._id %>" class=" title-font text-2xl font-bold text-gray-900 mb-3"
                >
                  <%= menu.menuTitle %>
                </a>
                <div class="flex items-center flex-wrap mt-6 mb-3">
                  <a  href="/share?menuId=<%= menu._id %>&menuName=<%= menu.menuTitle %>"
                    class="hover:opacity-100 text-black opacity-60 md:mb-0 font-medium lg:mb-0">
                    <p class="inline-flex items-center">
                      share
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class=" w-4 ml-1 mt-1 bg-white opacity-70 "
                        viewBox="0 0 512 512"
                        
                        
                      >
                        <path
                          d="M503.691 189.836L327.687 37.851C312.281 24.546 288 35.347 288 56.015v80.053C127.371 137.907 0 170.1 0 322.326c0 61.441 39.581 122.309 83.333 154.132 13.653 9.931 33.111-2.533 28.077-18.631C66.066 312.814 132.917 274.316 288 272.085V360c0 20.7 24.3 31.453 39.687 18.164l176.004-152c11.071-9.562 11.086-26.753 0-36.328z"
                        />
                      </svg>
                    </p>
                  </a>
                  <a href="/menus/edit?menuId=<%= menu._id  %>"
                    class="hover:text-black text-gray-600 mr-3 inline-flex items-center lg:ml-auto md:ml-0 ml-auto leading-none text-sm pr-3 py-1 border-r-2 border-gray-300"
                  >
                    edit
                  
                  <a href="/remove?menuId=<%= menu._id  %>"
                    class="hover:text-black text-gray-600 inline-flex items-center leading-none text-sm"
                  >                 
                    delete
                  </a>
                </div>
              </div>
            </div>
          </div>
         
        <% }) %>
      </div>
    </div>
  </section>
